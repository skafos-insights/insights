

<h3>Current Issues</h3>

<table class='datatable' style="width:100%">
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Status</th>
      <th>Discussions</th>
    </tr>
  </thead>
  <tbody>
<%= for issue <- @issues do %>
    <tr>
      <td><a href="/issues/<%= issue.id %>"><%= issue.identifier %></a></td>
      <td>
        <%= if issue.status != "UNKNOWN" do %>
        <span class="badge badge-dark">
          <%= issue.status %>
        </span>
        <% end %>
      </td>
      <td>
        <%= Enum.count(issue.discussions) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

